@model WishlistVM

<div class="container">
    <h2 class="page-title">My Wishlist</h2>

    @if (!Model.Items.Any())
    {
        <p>Your wishlist is empty.</p>
    }
    else
    {
        <div class="wishlist-items">
            @foreach (var item in Model.Items)
            {
                <div class="wishlist-item" data-id="@item.GameId" style="display:flex; align-items:center; margin-bottom:15px; border-bottom:1px solid #ddd; padding-bottom:10px;">
                    
                    <!-- 游戏缩略图 -->
                    <div class="thumbnail" style="margin-right:15px;">
                        <img src="@item.ThumbnailUrl" alt="@item.Title"/>
                    </div>
                    
                    <!-- 游戏信息 -->
                    <div class="info" style="flex:1;">
                        <h4 style="margin:0;">@item.Title</h4>
                        <p style="margin:5px 0; font-weight:bold;">$@item.Price</p>
                    </div>
                    
                    <!-- 操作按钮 -->
                    <div class="actions button-group">
                        <button type="button" class="primary-btn" onclick="addToCart(@item.GameId)">Add to Cart</button>
                        <button type="button" class="secondary-btn" onclick="removeFromWishlist(@item.WishlistId, this)">Remove</button>
                    </div>
                </div>
            }
        </div>
    }
</div>





@section Styles {
    <link rel="stylesheet" href="~/css/pages/wishlist.css" asp-append-version="true"/>
}

@section Scripts {
    @* <script src="~/js/components/game_detail.js" asp-append-version="true"></script> *@
    <script src="~/js/components/wishlist.js" asp-append-version="true"></script>
}