@model SearchPageVM

<div class="search-container">
    <!-- 左侧主区 -->
    <div class="left-col">
        <div class="search-box">
            <input id="searchInput" type="text" placeholder="Search games or developer..." value="@Model.SearchTerm" aria-label="search-input">
            <button id="searchSubmit" class="primary-btn">Search</button>
        </div>


        <div class="results-list">
            @if (!Model.Results.Any())
            {
                <div class="no-results">Not relevant game found.</div>
            }
            else
            {
                foreach (var g in Model.Results)
                {
                    <div class="result-card">
                        <div class="cover">
                            <img src="@g.Cover" alt="@g.Title 封面图">
                        </div>

                        <div class="info">
                            <h3 class="title">@g.Title</h3>
                            <div class="date-developer">
                                <p class="date">发行日期：@g.ReleaseDate.ToString("yyyy-MM-dd")</p>
                                <a asp-controller="Profile" asp-action="Index" asp-route-id="@g.DeveloperId">
                                    <p class="developer">Developer：@g.DeveloperName</p>
                                </a>
                            </div>

                            <div class="price-area">
                                @if (g.DiscountPrice != null)
                                {
                                    <span class="price-discount">RM @g.DiscountPrice</span>
                                    <span class="price-original">RM @g.Price</span>
                                }
                                else
                                {
                                    <span class="price-normal">RM @g.Price</span>
                                }
                            </div>

                            <div class="rating">
                                <span class="like-icon active">
                                    <i class="fa fa-heart"></i> Rating from players: @(Math.Round(g.PositiveRate * 100))%
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

    <aside class="right-col">
        <!-- 价格筛选区 -->
        <section class="panel" id="pricePanel">
            <h4>价格筛选</h4>
            <div class="price-slider">
                <div class="slider-row">
                    <div class="slider-column">
                        <input id="priceRange" class="slider-input" type="range" min="0" max="5" step="1" value="5">
                        <div class="price-labels" aria-hidden="true">
                            <span>under RM15</span>
                            <span>under RM30</span>
                            <span>under RM60</span>
                            <span>under RM150</span>
                            <span>under RM300</span>
                            <span>Any Price</span>
                        </div>
                    </div>
                    <div class="price-values" id="priceValue">Any Price</div>
                </div>
                
                <div style="margin-top:10px; display:flex; gap:12px; align-items:center">
                    <div class="toggle">
                        <div class="switch" id="hideFreeSwitch"><div class="knob"></div></div>
                        <div class="help">隐藏免费游戏</div>
                    </div>
                    <div class="toggle">
                        <div class="switch" id="onlyDiscountSwitch"><div class="knob"></div></div>
                        <div class="help">只显示折扣游戏</div>
                    </div>
                </div>
            </div>
        </section>


        <!-- 偏好筛选区 -->
        <section class="panel" id="prefPanel">
            <h4>偏好筛选</h4>
            <div class="pref-list">
                <label class="toggle"><div class="switch" id="hideOwnedSwitch"><div class="knob"></div></div><div class="help">隐藏已有游戏</div></label>
                <label class="toggle"><div class="switch" id="hideWishlistSwitch"><div class="knob"></div></div><div class="help">隐藏愿望单游戏</div></label>
            </div>
        </section>


        <!-- 标签筛选区 -->
        <section class="panel" id="tagPanel">
            <h4>标签筛选</h4>
            <div>
                <div class="tag-search">
                    <input type="text" class="tag-input" id="tagInput" placeholder="搜索标签，按 Enter 添加" />
                    <button class="search-submit" id="tagAddBtn">Add</button>
                </div>
                <div class="tag-suggestions" id="tagSuggestions" aria-hidden="true"></div>
                <div class="active-filters" id="activeFilters" aria-live="polite"></div>
            </div>
        </section>
    </aside>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/search.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/community.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/pages/search.js" asp-append-version="true"></script>    
}