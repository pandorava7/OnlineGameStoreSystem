@model OnlineGameStoreSystem.Models.ViewModels.UpdatePasswordVM;

@{
    ViewData["Title"] = "Change Password";
}

<div class="login-container">
    <div class="back-text" onclick="history.back()">
        <span class="arrow"><</span>
        <span class="back-word">Back</span>
    </div>

    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="ChangePassword" method="post">

        <div class="form-group">
            <label>Old Password</label>
            <div class="password-input-container">
                <input asp-for="OldPassword" class="form-control" id="oldPassword" placeholder="old password" required />
                <span class="password-toggle" onclick="togglePassword('oldPassword', this)">
                    <svg class="eye-icon" width="22" height="22" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.06 10.06 0 0 1 12 19c-5 0-9-7-9-7a19.45 19.45 0 0 1 5.06-6.06" />
                        <line x1="1" y1="1" x2="23" y2="23" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="OldPassword" style="color:red"></span>
        </div>

        <div class="form-group">
            <label>New Password</label>
            <div class="password-input-container">
                <input asp-for="NewPassword" class="form-control" id="newPassword" placeholder="new password" required />
                <span class="password-toggle" onclick="togglePassword('newPassword', this)">
                    <svg class="eye-icon" width="22" height="22" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.06 10.06 0 0 1 12 19c-5 0-9-7-9-7a19.45 19.45 0 0 1 5.06-6.06" />
                        <line x1="1" y1="1" x2="23" y2="23" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="NewPassword" style="color:red"></span>
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            <div class="password-input-container">
                <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="confirm password" required />
                <span class="password-toggle" onclick="togglePassword('confirmPassword', this)">
                    <svg class="eye-icon" width="22" height="22" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.06 10.06 0 0 1 12 19c-5 0-9-7-9-7a19.45 19.45 0 0 1 5.06-6.06" />
                        <line x1="1" y1="1" x2="23" y2="23" />
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
        </div>
        <button type="submit" class="login-btn">Update Password</button>
    </form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/functions/Account.js"></script>
}