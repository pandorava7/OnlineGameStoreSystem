@model OnlineGameStoreSystem.Models.ViewModels.ResetPasswordVM;
@{
    ViewData["Title"] = "Create New Password";
}

<link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />

<div class="login-container">

    <div class="back-text" onclick="history.back()">
        <span class="arrow"><</span>
        <span class="back-word">Back</span>
    </div>

    <h2>Reset Password</h2>

    <p>Please enter your new password below.</p>

    <form asp-controller="Account" asp-action="ResetPassword2" method="post">

        <div class="form-group">
            <label>New Password</label>
            <div class="password-input-container">
                <input asp-for="NewPassword" class="form-control" id="passwordInput" placeholder="new password" required />
                <span class="password-toggle" onclick="togglePassword('passwordInput', this)">
                    <!-- 默认闭眼，带斜杠表示隐藏密码 -->
                    <svg class="eye-icon" width="22" height="22" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.06 10.06 0 0 1 12 19c-5 0-9-7-9-7a19.45 19.45 0 0 1 5.06-6.06" />
                        <line x1="1" y1="1" x2="23" y2="23" /> <!-- 斜杠 -->
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="NewPassword" style="color:red"></span>
        </div>

        <div class="form-group">
            <label>Confirm New Password</label>
            <div class="password-input-container">
                <input asp-for="ConfirmPassword" class="form-control" id="confirmPasswordInput" placeholder="confirm password" required />
                <span class="password-toggle" onclick="togglePassword('confirmPasswordInput', this)">
                    <!-- 默认闭眼，带斜杠 -->
                    <svg class="eye-icon" width="22" height="22" viewBox="0 0 24 24" fill="none"
                         stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17.94 17.94A10.06 10.06 0 0 1 12 19c-5 0-9-7-9-7a19.45 19.45 0 0 1 5.06-6.06" />
                        <line x1="1" y1="1" x2="23" y2="23" /> <!-- 斜杠 -->
                        <circle cx="12" cy="12" r="3" />
                    </svg>
                </span>
            </div>
            <span asp-validation-for="ConfirmPassword" style="color:red"></span>
        </div>

        <button class="login-btn" type="submit">Submit</button>

    </form>
</div>


@section Scripts {
    <script src="~/js/functions/Account.js"></script>
    <script>
        // Check if TempData has a flash message
        @if (TempData["FlashMessage"] != null)
        {
                    <text>
                        showTemporaryMessage("@TempData["FlashMessage"]", "@TempData["FlashMessageType"]");
                    </text>
        }
    </script>
}


