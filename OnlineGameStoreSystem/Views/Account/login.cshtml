@{
    ViewData["Title"] = "Sign In";
}

@* login Style *@
<link rel="stylesheet" href="~/css/Account/account.css" asp-append-version="true" />


<div class="login-container">
    <h2>Sign in</h2>
  
    <form>
        <div class="sec-box">

            <div class="form-group">
                <label>SIGN IN WITH ACCOUNT NAME</label>
                <input type="text" placeholder="Enter username">
            </div>

            <div class="form-group">
                <label>PASSWORD</label>
                <input type="password" placeholder="Enter password">
            </div>

            <button class="login-btn" type="button">Sign In</button>

            <p class="forgot"><a href="#">Forgot your password?</a></p>
        </div>
          
    </form>

    <div class="create">
        <span class="create1">New here?</span>
        <span class="create2">
            <a class="create22" href="@Url.Action("register", "Account")">Create an account</a>
        </span>
    </div>
</div>

