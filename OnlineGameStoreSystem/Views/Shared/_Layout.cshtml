<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineGameStoreSystem</title>
    @* 外部css *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
    @* base css *@
    <link rel="stylesheet" href="~/css/base/variable.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/base/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineGameStoreSystem.styles.css" asp-append-version="true" />
    @* components css *@
    <link rel="stylesheet" href="~/css/components/navbar.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="site-header">
        <div class="nav-container">
            <div class="nav-left">
                <a class="brand" href="/">
                    <img src="@Url.Content("~/images/favicon.png")" alt="logo" class="brand-icon" />
                </a>
            </div>

            <nav class="nav-center" aria-label="Main navigation">
                <ul>
                    <li><a href="/store">Store</a></li>
                    <li><a href="/community">Community</a></li>
                    <li><a href="/support">Support</a></li>
                </ul>
            </nav>

            <div class="nav-right">
                <button class="icon-btn" aria-label="Search">
                    <i class="fa fa-search"></i>
                </button>

                <a class="icon-btn cart" href="/cart" aria-label="Shopping cart">
                    <i class="fa fa-shopping-cart"></i>
                    <span class="cart-badge" aria-hidden="true">2</span>
                </a>

                <a class="icon-btn account" href="/account" aria-label="Account">
                    <i class="fa fa-user-circle"></i>
                </a>
            </div>
        </div>

        <div class="search-bar-wrapper">
            <div class="search-bar-container">
                <input type="text" placeholder="Search games..." class="search-input" />
            </div>
        </div>
    </header>



    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @* <footer>

    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/components/navbar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
