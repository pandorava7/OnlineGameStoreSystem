@using OnlineGameStoreSystem.Models.ViewModels

<div class="cart-page-container">
    <h1 class="cart-page-title">Payment Method</h1>

    <form asp-controller="Payment" asp-action="Summary" method="post" class="cart-content">
        <div class="left-container">
            <p class="des">Please select a payment method</p>

            <select asp-items="Html.GetEnumSelectList<PaymentMethod>()" class="form-control payment-options">
                <option value="" disabled selected hidden>-- Please Select --</option>
            </select>

            <p class="des2">
                You'll have a chance to review your order before it's placed.
            </p>
        </div>

        <div class="cart-summary">
            <h3 class="summary-title">Order Summary</h3>
            <div class="summary-row">
                <span>Item Subtotal</span>
                <span id="summary-subtotal">RM <span id="cart-total">0.00</span></span>
            </div>
            <div class="summary-row total">
                <span>Total</span>
                <span>RM <span id="cart-total-final">0.00</span></span> @* 购物车总价与此绑定 *@
            </div>
            <button type="submit" class="checkout-btn primary-btn button">
                <i class="fas fa-credit-card"></i> Continue
            </button>
            <a href="/cart" class="continue-shopping">
                <i class="fas fa-arrow-left"></i> Back to Shopping Cart
            </a>
        </div>
    </form>
</div>


@section Scripts {
    <script src="~/js/components/shopping_cart.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/shopping-cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/payment.css" asp-append-version="true" />

}